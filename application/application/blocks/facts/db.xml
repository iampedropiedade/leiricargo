<?xml version="1.0" encoding="UTF-8"?>
<schema
    xmlns="http://www.concrete5.org/doctrine-xml/0.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
    <table name="btFacts">
        <field name="bID" type="integer">
            <unsigned/>
            <autoincrement/>
        </field>
        <field name="backgroundImageId" type="integer">
            <unsigned/>
        </field>
        <field name="title" type="string" size="1024" />
        <field name="subTitle" type="string" size="1024" />
        <field name="content" type="text" />
    </table>
</schema>